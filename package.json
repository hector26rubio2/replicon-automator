{
  "name": "replicon-automator",
  "version": "3.6.2",
  "description": "Automatizador de Replicon - App de escritorio moderna con Electron + Playwright",
  "main": "dist/main/main/index.js",
  "author": "Hector David Rubio Tabares",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_NO_WARNINGS=1 concurrently -k \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:main": "npm run build:main && wait-on tcp:5173 && cross-env NODE_ENV=development electron .",
    "dev:renderer": "vite",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json && tsc-alias -p tsconfig.main.json",
    "postinstall": "npx playwright install chromium --with-deps",
    "clean": "node scripts/prebuild-cleanup.js",
    "dist": "npm run clean && npm run build && electron-builder",
    "dist:win": "npm run clean && npm run build && electron-builder --win",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "validate": "npm run lint && npm run typecheck && npm run test",
    "prepare": "husky"
  },
  "dependencies": {
    "date-holidays": "^3.26.6",
    "dotenv": "^17.2.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "papaparse": "^5.4.1",
    "playwright": "^1.40.0",
    "uuid": "^9.0.1",
    "zod": "^4.3.4",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^20.10.0",
    "@types/papaparse": "^5.3.14",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.6.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^39.2.7",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.1.7",
    "jest-axe": "^10.0.0",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.6",
    "terser": "^5.44.1",
    "tsc-alias": "^1.8.16",
    "typescript": "5.3.3",
    "vite": "^7.3.0",
    "vitest": "^1.2.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.hdrt.replicon-automator",
    "productName": "Replicon Automator",
    "artifactName": "Replicon.Automator.Setup.${ext}",
    "compression": "maximum",
    "directories": {
      "output": "release"
    },
    "asarUnpack": [
      "node_modules/playwright/**/*"
    ],
    "files": [
      "dist/**/*",
      "package.json",
      "!dist/**/*.map",
      "!dist/**/*.d.ts"
    ],
    "extraFiles": [
      {
        "from": ".env.production",
        "to": ".env.production"
      }
    ],
    "extraResources": [
      {
        "from": "playwright-bin",
        "to": "playwright",
        "filter": [
          "**/*",
          "!**/*.pdb",
          "!**/DEPENDENCIES*",
          "!**/INSTALLATION*"
        ]
      }
    ],
    "electronLanguages": [
      "en",
      "es"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "portable": {
      "artifactName": "Replicon.Automator.Portable.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "hector26rubio2",
      "repo": "replicon-automator",
      "releaseType": "release"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ],
    "*.{json,md}": [
      "echo 'Skipping prettier'"
    ]
  }
}